{
    "manifest_version": 3,
    "name": "Dynamics CRM Entity Generator",
    "version": "1.0",
    "permissions": ["scripting", "tabs", "clipboardWrite"],
    "host_permissions": ["*://*.dynamics.com/*"],
    "action": {
        "default_popup": "/popup/popup.html",
        "default_icon": "icons/128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.dynamics.com/*"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["/worker.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "description": "A simple Chrome/Edge plugin which generates Entity code for Unit Tests"
}
